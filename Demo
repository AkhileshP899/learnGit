create or replace view ACTIVITY_VW(
	ACT_KEY,
	CODE,
	ACTIVITYNAME,
	STARTDT,
	CONTACT_HRS,
	ACTLABEL_NAME,
	INST_KEY,
	INST_GUID,
	INST_NT,
	INST_FNAME,
	INST_LNAME,
	INST_EMAIL,
	ISRESPONSIBLE,
	LOC_NAME,
	FACILITY,
	TIMEZONE,
	ESIG_REQ,
	REV_NUM,
	REV_DT
) as
SELECT b.act_key, b.code, b.activityname,
--CAST(
convert_timezone(
TO_TIMESTAMP (
     TO_CHAR(b.startdt,'m/dd/yyyy hh24:mi:ss')
            ,'mm/dd/yyyy hh24:mi:ss')
,'GMT')
 
AS startdt,
(TO_CHAR (TRUNC (b.DURATION / 3600), '09')
            || ':'
            || TO_CHAR (MOD (b.DURATION, 3600) / 60, '09')
            || ':'
            || TO_CHAR (MOD (MOD (b.DURATION, 3600), 60), '09')
           ) AS contact_hrs,
          b.actlabel_name, b.inst_key, b.inst_guid,
           SUBSTR (b.inst_nt,
                   (regexp_INSTR (b.inst_nt, '\\\\', -1, 1) + 1),LENGTH (b.inst_nt)) AS inst_nt,
           b.inst_fname, b.inst_lname, b.inst_email, b.isresponsible,
           b.loc_name, b.facility, b.TIMEZONE, b.esig_req, b.rev_num,
           b.rev_dt
      FROM (SELECT actv.activity_pk AS act_key, actv.code AS code,
                   actv.activityname AS activityname, actv.startdt AS startdt,
                   actv.estdur AS DURATION,
                   actlb.actlabel_name AS actlabel_name,
                   inst.inst_pk AS inst_key, inst.inst_no AS inst_guid,
                   iwc.usr_ntlogin AS inst_nt, inst.inst_fname AS inst_fname,
                   inst.inst_lname AS inst_lname,
                   inst.inst_email AS inst_email,
                   actins.isresponsible AS isresponsible,
                   loc.loc_name AS loc_name, fac.fac_name AS facility,
                   tmzone.NAME AS TIMEZONE, tmzone.timezoneid AS timezoneid,
                   NULL AS esig_req, NULL AS rev_num, NULL AS rev_dt
              FROM P2L_BO_STAGING_OWNER.CLD_TBL_TMX_ACTIVITY  actv,
                   P2L_BO_STAGING_OWNER.CLD_ACTLABEL actlb,
                   P2L_BO_STAGING_OWNER.CLD_TBL_TMX_ACTINST actins,
                   P2L_BO_STAGING_OWNER.CLD_INST inst,
                   P2L_BO_STAGING_OWNER.CLD_LOC loc,
                   P2L_BO_STAGING_OWNER.CLD_TBL_TMX_ACTLOC actloc,
                   P2L_BO_STAGING_OWNER.CLD_TBLEMP emp,
                   P2L_BO_STAGING_OWNER.CLD_TBL_LMS_TIMEZONE tmzone,
                   P2L_BO_STAGING_OWNER.CLD_IWC_USR iwc,
                   P2L_BO_STAGING_OWNER.CLD_FAC fac
             WHERE (   (actlb.actlabel_name LIKE '%ILT%')
                    OR (actlb.actlabel_name LIKE '%on-the-job%')
                   )
               AND actv.activitylabelfk = actlb.actlabel_pk
               AND actv.active = 1
               AND actv.activity_pk > 0
               AND (actv.startdt >= (current_date() - 14) OR actv.startdt IS NULL)
               AND tmzone.timezone_pk(+) = actv.timezonefk
               AND tmzone.timezoneid NOT IN (
'AGT',
'BET',
'EAT',
'AST',
'PNT',
'IET',
'VST',
'CTT',
'ART',
'JST',
'BST',
'CAT',
'CNT',
'AET',
'SST',
'PRT',
'PLT',
'NET',
'NST',
'Europe/Tirana',
'IST',
'ECT',
'ACT',
'Asia/Beijing',
'MIT'
)
               AND actins.activityfk = actv.activity_pk
               AND (   (actins.isqualified = 1 AND actins.isresponsible = 0)
                    OR actins.isresponsible = 1
                   )
               AND inst.inst_pk = actins.instfk
               AND inst.active = 1
               AND actloc.activityfk(+) = actv.activity_pk
               AND loc.loc_pk(+) = actloc.locfk
               AND fac.fac_pk(+) = loc.loc_facfk
               AND emp.emp_pk = inst.inst_empfk
               AND emp.emp_active = 1
               AND inst.inst_empfk = iwc.usr_empfk) b
           INNER JOIN
           (SELECT   actv.code AS z_activitycode,
                     actv.startdt AS z_act_startdt
                FROM P2L_BO_STAGING_OWNER.CLD_TBL_TMX_ACTIVITY  actv
               WHERE actv.active = 1
                 AND actv.activitylabelfk IN (
                        SELECT a.actlabel_pk
                          FROM P2L_BO_STAGING_OWNER.CLD_ACTLABEL a
                         WHERE (   (a.actlabel_name LIKE '%ILT%')
                                OR (a.actlabel_name LIKE '%on-the-job%')
                               ))
            GROUP BY actv.code, actv.startdt
              HAVING COUNT (*) = 1) a
           ON (b.code = a.z_activitycode AND b.startdt = a.z_act_startdt)
          OR (    b.code = a.z_activitycode
              AND b.startdt IS NULL
              AND a.z_act_startdt IS NULL
             );
























create or replace view V_SR_ACT_MAINTENANCE(
	METADATAFK,
	ACTIVITY_SPONSORS,
	ACT_EXPERTS,
	ACTIVITY_REVIEWERS,
	ACT_TRAIN_REPRESENTATIVES,
	REVIEW_OUTCOME,
	NOTES,
	REVIEW_DATE,
	NEXT_REVIEW_DATE
) as 
SELECT metadatafk,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX a
            WHERE metadatakey = 'stringelement'
              AND a.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = a.metadatafk
                         AND n.metadatakey = a.metadatakey))
                                                         AS activity_sponsors,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX b
            WHERE metadatakey = 'stringelement2'
              AND b.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = b.metadatafk
                         AND n.metadatakey = b.metadatakey)) AS act_experts,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX c
            WHERE metadatakey = 'stringelement3'
              AND c.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = c.metadatafk
                         AND n.metadatakey = c.metadatakey))
                                                        AS activity_reviewers,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX d
            WHERE metadatakey = 'stringelement4'
              AND d.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = d.metadatafk
                         AND n.metadatakey = d.metadatakey))
                                                 AS act_train_representatives,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX e
            WHERE metadatakey = 'stringelement5'
              AND e.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = e.metadatafk
                         AND n.metadatakey = e.metadatakey))
                                                            AS review_outcome,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX f
            WHERE metadatakey = 'stringelement6'
              AND f.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = f.metadatafk
                         AND n.metadatakey = f.metadatakey)) AS notes,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX g
            WHERE metadatakey = 'dateelement'
              AND g.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = g.metadatafk
                         AND n.metadatakey = g.metadatakey)) AS review_date,
          (SELECT metadatavalue
             FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX h
            WHERE metadatakey = 'dateelement2'
              AND h.metadatafk = m.metadatafk
              AND IDENTIFIER =
                     (SELECT MAX (IDENTIFIER)
                        FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                       WHERE n.metadatafk = h.metadatafk
                         AND n.metadatakey = h.metadatakey))
                                                          AS next_review_date
     FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX m
    WHERE m.IDENTIFIER = (SELECT MAX (IDENTIFIER)
                            FROM P2L_BO_STAGING_OWNER.CLD_CNTMDATA_EX n
                           WHERE n.metadatafk = m.metadatafk);

